<% layout("./layouts/boilerplate.ejs") %>

<body>
    <div class="row">
        <div class="col-8 offset-2 my-5">
            <h2 class="mb-2">LogIn</h2>
            <form method="post" action="/notes/login" class="needs-validation">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required>

                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required>

                <div class="d-flex align-items-center gap-4"> <!-- Flex container -->
                    <button type="submit" class="btn btn-success mt-4">Login</button>
                    <a href="/notes/register" class="btn btn-outline-primary mt-4">SignUp</a> <!-- Convert anchor tag to button for consistency -->
                </div>
            </form>
        </div>
    </div>
</body>
